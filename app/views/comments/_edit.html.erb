<!-- この記述がblogのshow画面に表示されるコメント入力欄になります -->
<%= form_with(model: [talk, @comment]) do |f| %>

  <div class="field">
    <%= f.label :'content', t('view.comment_content') %>
    <%= f.text_area :content, placeholder:  t('view.comment_placeholder') %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>