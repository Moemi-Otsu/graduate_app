<ul>
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
      <li>
        <p><%= comment.content %></p>
        <!--user作成ののちにif文で条件分岐-->
        <p><%= link_to '削除する', talk_comment_path(comment.talk_id, comment.id), method: :delete, remote: true, data: { confirm: '本当に削除しますか？' } %></p>
      </li>
    <% end %>
  <% end %>
</ul>