<% content_for(:title, t('view.comment_h1')) %>

<%= form_with(model: @comment, local: true, url: talk_comments_path(@talk.id)) do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= @comment.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form">
    <dl>
      <dt><%= f.label :content %></dt>
      <dd><%= f.text_field :content %></dd>
    </dl>
  </div>
  <%= f.submit %>
<% end %>
<ul class="back_links">
  <li><%= link_to t('view.btn_back'), talk_path(@talk.id), class: 'submit' %></li>
</ul>