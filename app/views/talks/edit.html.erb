<h1><%= t('view.talk_edit_h1') %></h1>

<%= form_with(model: @talk, local:true) do |f| %>

  <% if @talk.errors.any? %>
    <div id="error_explanation">
      <h2><%= @talk.errors.count %><%= t('view.errors_count') %></h2>
      <ul>
      <% @talk.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form">
    <dl>
      <dt><%= f.label :'title', t('view.talk_title') %></dt>
      <dd><%= f.text_field :title, placeholder: t('view.talk_title_placeholder') %></dd>
      <dt><%= f.label :'content', t('view.talk_content') %></dt>
      <dd><%= f.text_field :content, placeholder: t('view.talk_content_placeholder') %></dd>
      <dd><%= f.submit t('view.btn_update') %></dd>
    </dl>
  </div>

<% end %>